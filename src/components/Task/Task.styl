.title
    display inline-block

.checkbox
    display inline-block
    width 13px
    height 13px
    border 1px solid #CCC
    border-radius 2px

.checkbox-value:checked+.checkbox
    background-color pink

.checkbox-value
    width: 0
    height: 0
    position: absolute

.checkbox-value:checked:after
    content: '\2714'
    top: -3px
    left: -2px
    position: absolute
